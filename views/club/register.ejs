<%- include('../partials/head', { title: 'Club — Registro' }) %>

<section class="auth-wrap">
  <div class="auth-header">
    <a href="/" class="auth-logo" aria-label="Gorillaz Motorbikes">
      <img src="/favicons/android-chrome-192x192.png" alt="Gorillaz Motorbikes" />
    </a>
    <h1 class="auth-title">Crea tu cuenta</h1>
  </div>

  <form method="post" action="/club/registro" class="auth-card" novalidate>
    <label for="name">Nombre</label>
    <input id="name" name="name" placeholder="Tu nombre" required />
    <label for="email">Correo</label>
    <input id="email" name="email" type="email" autocomplete="username" placeholder="tu@correo.com" required />
    <label for="password">Contraseña</label>
    <input id="password" name="password" type="password" autocomplete="new-password" placeholder="********" required />
    <button class="btn btn-primary" type="submit">Crear cuenta</button>
  </form>

  <div class="auth-alt">¿Ya tienes cuenta? <a class="link" href="/club/login">Inicia sesión</a></div>
</section>

<%- include('../partials/footer') %>
