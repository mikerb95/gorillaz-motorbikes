<%- include('./partials/head', { title: 'Eventos' }) %>
<main class="container section">
  <h1 class="section-title">Eventos del Club</h1>
  <% if (!events || events.length === 0) { %>
    <p class="muted">No hay eventos publicados a√∫n.</p>
  <% } else { %>
    <div class="grid three">
      <% events.forEach((ev, idx) => { %>
        <article class="card stack" id="ev-<%= idx %>">
          <h3 class="tight"><%= ev.title %></h3>
          <div class="row gap">
            <span class="chip"><%= ev.date %></span>
            <% if (ev.location) { %><span class="chip"><%= ev.location %></span><% } %>
          </div>
          <p><%= ev.description %></p>
        </article>
      <% }) %>
    </div>
  <% } %>
</main>
<%- include('./partials/footer') %>
