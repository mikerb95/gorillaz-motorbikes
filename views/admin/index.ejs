<%- include('../partials/head', { title: 'Admin — Panel' }) %>
<main class="container section">
  <h1 class="section-title">Panel de Administración</h1>
  <ul class="grid">
    <li class="card"><a href="/admin/calendario">Calendario de disponibilidad</a></li>
    <li class="card"><a href="/admin/eventos">Eventos del club</a></li>
    <li class="card"><a href="/admin/usuarios">Usuarios</a></li>
